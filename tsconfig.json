{
    "compilerOptions": {
      "experimentalDecorators": true,
      "useDefineForClassFields": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react-native",
      "lib": ["es2017"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext",
      "baseUrl": ".",
      "paths": {
        "@components": ["./src/components"],
        "@ui": ["./src/ui"],
        "@theme": ["./src/theme"],
        "@screens": ["./src/screens"],
        "@navigation": ["./src/navigation"],
        "@assets": ["./src/assets"],
        "@data": ["./src/data"],
        "@utils": ["./src/utils"],
        "@i18n": ["./src/i18n"],
        "@hooks": ["./src/hooks"],
        "@constants": ["./src/constants"],
        "@api": ["./src/api"],
        "@store": ["./src/store"],
        "~types": ["./src/types.ts"]
      }
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }